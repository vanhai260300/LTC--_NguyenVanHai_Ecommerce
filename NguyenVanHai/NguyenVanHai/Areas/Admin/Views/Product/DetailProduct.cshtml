@model ModelFE.FE.Product
@{
    ViewBag.Title = "DetailProduct";
}
<div class="row px-md-4 mt-md-4">
    <h1>Detail Product</h1>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading"><a href="/Admin/Product">Back To List</a></div>
            <div class="panel-body container">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label>ID Product</label>
                                        @Html.TextBoxFor(model => model.ID, new { @class = "form-control", @ReadOnly = "true" })
                                        <p>@Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })</p>
                                    </div>
                                    <div class="form-group">
                                        <label>Name Product</label>
                                        @Html.TextBoxFor(model => model.Name, "", new { @class = "form-control", @ReadOnly = "true" })
                                        <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</p>
                                    </div>
                                    <div class="form-group">
                                        <label>Name Category</label>
                                        @Html.TextBoxFor(model => model.Category.Name, "", new { @class = "form-control", @ReadOnly = "true" })
                                        <p>@Html.ValidationMessageFor(model => model.Category.Name, "", new { @class = "text-danger" })</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label>Price</label>
                                        @Html.TextBoxFor(model => model.UnitCost, "", new { @class = "form-control", @ReadOnly = "true" })
                                        <p>@Html.ValidationMessageFor(model => model.UnitCost, "", new { @class = "text-danger" })</p>
                                    </div>
                                    <div class="form-group">
                                        <label>Quantity</label>
                                        @Html.TextBoxFor(model => model.Quantity, "", new { @class = "form-control", @ReadOnly = "true" })
                                        <p>@Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })</p>
                                    </div>
                                    <div class="form-group">
                                        <label>Status</label>
                                        @Html.TextBoxFor(model => model.Status, "", new { @class = "form-control", @ReadOnly = "true" })
                                        <p>@Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })</p>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @ReadOnly = "true" })
                                <p>@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })</p>
                            </div>
                            <div>
                                <label>Image</label>
                                <div class="col-4">
                                    <img style="
                                    width: 80%;
                                " src="~/Assets/Image/@Html.DisplayTextFor(model=>model.Image)" alt="Alternate Text" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Edit", "Update", new { id = Model.ID }) |
        @Html.ActionLink("Back To Home", "Index")
    </p>
</div>

